<div class = "container">
    <div class = "row">
        <div class = "col-sm">
            <div class = "mx-auto" style = "width: 640px;">
                <%= image_tag @post.image.variant(resize_to_fill: [640, 0]) %>
            </div>
        </div>
    </div>
    <div class = "row justify-content-center">
        <div class = "col-sm-6 form-wrapper text-center">
            <%= bootstrap_form_for @post do |f| %>
                <%= f.file_field :image %>
                <%= f.text_field :caption %>
                <%= f.submit %>
            <% end %>
            <%= link_to 'Delete Post', post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
            |
            <%= link_to 'Cancel', posts_path %>
        </div>
    </div>
</div>